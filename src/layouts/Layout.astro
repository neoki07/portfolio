---
import Footer from '../components/Footer/Footer.astro'
import Header from '../components/Header/Header.astro'
import { getLangFromUrl } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="neoki's portfolio." />
  </head>
  <body
    class="bg-color-bg-light font-sans text-color-text-primary-light dark:bg-color-bg-dark dark:text-color-text-primary-dark"
  >
    <div class="flex min-h-screen min-w-[28rem] flex-col">
      <div
        class="sticky top-0 z-10 backdrop-blur-sm lg:pointer-events-none lg:bg-transparent lg:backdrop-blur-none lg:dark:bg-transparent"
      >
        <Header />
      </div>
      <div class="flex-1 overflow-hidden">
        <slot />
      </div>
      <div class="mt-4">
        <Footer />
      </div>
    </div>
  </body>
</html>
